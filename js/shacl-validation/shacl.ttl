@prefix mcb: <http://movie.chatbot.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix schema: <http://schema.org> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema> .

mcb:MovieShape
	a sh:NodeShape ;
	sh:targetClass schema:Movie ;
	sh:property [
		sh:path mcb:hasTitle ;
		sh:datatype xsd:string ;
	] ;
	sh:property [
		sh:path mcb:hasTitle ;
		sh:datatype xsd:string ;
		# not true because there might be a title for every language
		sh:maxCount 1 ;
	] ;
	sh:property [
		sh:path mcb:hasGenre ;
		sh:datatype xsd:string ;
		sh:minCount 1 ;
		# default severity is sh:Violation
		sh:severity sh:Warning ;
		sh:message "A movie should have at least one genre!"@en ;
	] ;
	sh:property [
		sh:path mcb:hasLanguage ;
		sh:datatype xsd:string ;
	] ;
	sh:property [
		sh:path schema:musicBy ;
		sh:datatype xsd:anyURI ;
		# we don't provide this property atm
		sh:deactivated true ;
	].
